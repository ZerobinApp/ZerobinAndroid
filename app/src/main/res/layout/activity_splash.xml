<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/zerobinImage"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/splash_logo"
        app:layout_constraintBottom_toTopOf="@id/zerobinName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/zerobinName"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:adjustViewBounds="true"
        android:src="@drawable/zerobin_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/zerobinImage"
        app:layout_constraintStart_toStartOf="@+id/zerobinImage"
        app:layout_constraintTop_toBottomOf="@+id/zerobinImage" />
</androidx.constraintlayout.widget.ConstraintLayout>