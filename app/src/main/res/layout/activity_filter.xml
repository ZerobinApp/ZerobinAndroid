<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="VM"
            type="com.example.zerobin.ui.splash.filter.FilterViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="30dp"
        tools:context=".ui.splash.filter.FilterActivity">

        <ImageView
            android:id="@+id/zerobinLogo"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/zerobin_logo_temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/filterDescription1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/filter_description1"
            android:textColor="#272727"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zerobinLogo" />

        <TextView
            android:id="@+id/filterDescription2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/filter_description2"
            android:textColor="#1CD16A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filterDescription1" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/btnNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filterDescription2">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip1"
                style="@style/FilterChip"
                android:layout_marginStart="10dp"
                android:text="#비건"
                tools:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip2"
                style="@style/FilterChip"
                android:text="#리필스테이션"
                tools:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip3"
                style="@style/FilterChip"
                android:text="#생활용품" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4"
                style="@style/FilterChip"
                android:text="#주방용품" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5"
                style="@style/FilterChip"
                android:layout_marginStart="20dp"
                android:text="#업사이클링" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip6"
                style="@style/FilterChip"
                android:text="#욕실용품" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip7"
                style="@style/FilterChip"
                android:text="#식품" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip8"
                style="@style/FilterChip"
                android:text="#플라스틱 프리" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip9"
                style="@style/FilterChip"
                android:layout_marginStart="30dp"
                android:text="#화장품" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip10"
                style="@style/FilterChip"
                android:text="#카페" />

        </com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_long_button"
            android:text="@string/filter_button_text"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipGroup" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>