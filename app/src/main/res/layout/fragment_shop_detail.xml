<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="VM"
            type="com.shop.zerobin.ui.home.shop.ShopDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.home.shop.ShopDetailFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/shopImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/shop_sample" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineStart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="30dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineEnd"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="30dp" />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_arrow_back_wh"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/hashTag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@{VM.shopDetail.hashtagList.toString()}"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/btnBack"
                    tools:text="#해시태그  #해시태그  #해시태그" />

                <ImageView
                    android:id="@+id/btnZzim"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:src="@{VM.shopDetail.zzim ? @drawable/ic_favorite_24px : @drawable/ic_codicon_heart}"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_codicon_heart" />

                <TextView
                    android:id="@+id/shopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@{VM.shopDetail.name}"
                    android:textColor="#272727"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/shopImage"
                    tools:text="알맹상점" />

                <TextView
                    android:id="@+id/shopAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{VM.shopDetail.location}"
                    android:textColor="#272727"
                    android:textSize="11dp"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/shopName"
                    tools:text="서울특별시 마포구 월드컵로 49 2층" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/divider"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/shopAddress" />

                <TextView
                    android:id="@+id/feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/feature"
                    android:textColor="#272727"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/divider1" />

                <ImageView
                    android:id="@+id/featureImage1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/zerobin_logo_small"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/feature"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/featureName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@{VM.shopDetail.hashtagList.get(0).title}"
                    android:textColor="#272727"
                    android:textSize="13dp"
                    app:layout_constraintBottom_toTopOf="@id/featureDescription1"
                    app:layout_constraintStart_toEndOf="@id/featureImage1"
                    app:layout_constraintTop_toTopOf="@id/featureImage1"
                    tools:text="특징번호 1 텍스트" />

                <TextView
                    android:id="@+id/featureDescription1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{VM.shopDetail.hashtagList.get(0).comment}"
                    android:textColor="#939393"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="@id/featureImage1"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/featureName1"
                    app:layout_constraintTop_toBottomOf="@id/featureName1"
                    tools:text="특징번호 1에 대한 부가설명" />

                <ImageView
                    android:id="@+id/featureImage2"
                    visible="@{VM.shopDetail.hashtagList.size() >= 2}"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/zerobin_logo_small"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/featureImage1"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/featureName2"
                    visible="@{VM.shopDetail.hashtagList.size() >= 2}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text='@{VM.shopDetail.hashtagList.size() >= 2 ? VM.shopDetail.hashtagList.get(1).title : ""}'
                    android:textColor="#272727"
                    android:textSize="13dp"
                    app:layout_constraintBottom_toTopOf="@id/featureDescription2"
                    app:layout_constraintStart_toEndOf="@id/featureImage2"
                    app:layout_constraintTop_toTopOf="@id/featureImage2"
                    tools:text="특징번호 2 텍스트" />

                <TextView
                    android:id="@+id/featureDescription2"
                    visible="@{VM.shopDetail.hashtagList.size() >= 2}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text='@{VM.shopDetail.hashtagList.size() >= 2 ? VM.shopDetail.hashtagList.get(1).comment : ""}'
                    android:textColor="#939393"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="@id/featureImage2"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/featureName2"
                    app:layout_constraintTop_toBottomOf="@id/featureName2"
                    tools:text="특징번호 2에 대한 부가설명" />

                <ImageView
                    android:id="@+id/featureImage3"
                    visible="@{VM.shopDetail.hashtagList.size() >= 3}"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/zerobin_logo_small"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/featureImage2"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/featureName3"
                    visible="@{VM.shopDetail.hashtagList.size() >= 3}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text='@{VM.shopDetail.hashtagList.size() >= 3 ? VM.shopDetail.hashtagList.get(2).title : ""}'
                    android:textColor="#272727"
                    android:textSize="13dp"
                    app:layout_constraintBottom_toTopOf="@id/featureDescription3"
                    app:layout_constraintStart_toEndOf="@id/featureImage3"
                    app:layout_constraintTop_toTopOf="@id/featureImage3"
                    tools:text="특징번호 3 텍스트" />

                <TextView
                    android:id="@+id/featureDescription3"
                    visible="@{VM.shopDetail.hashtagList.size() >= 3}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text='@{VM.shopDetail.hashtagList.size() >= 3 ? VM.shopDetail.hashtagList.get(2).comment : ""}'
                    android:textColor="#939393"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="@id/featureImage3"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/featureName3"
                    app:layout_constraintTop_toBottomOf="@id/featureName3"
                    tools:text="특징번호 3에 대한 부가설명" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/divider"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/featureImage3" />

                <TextView
                    android:id="@+id/shopDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@{VM.shopDetail.comment}"
                    android:textColor="#272727"
                    android:textSize="13dp"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    tools:text='"알맹상점은 용산구 이태원로123-45 한적한 골목에 위치한\n제로웨이스트 매장입니다. 블라블라 블라블라를 판매하고,\n일회용품과 블라블라 사용을 최소로\n하는것을 목표하고 있어요.블라블라 블라블라!"' />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/divider"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/shopDescription" />

                <TextView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/review"
                    android:textColor="#272727"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@id/divider3" />

                <TextView
                    android:id="@+id/writeReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/make_review"
                    android:textSize="12dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/review"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detailReviewRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                    app:layout_constraintStart_toStartOf="@id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/review"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_review" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>ㄴ

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:src="@drawable/ic_fab"
            app:fabCustomSize="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:maxImageSize="44dp"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>