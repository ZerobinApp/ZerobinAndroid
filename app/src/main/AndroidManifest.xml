<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shop.zerobin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/zerobin_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/zerobin_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zerobin"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.splash.filter.FilterActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.common.ImageViewPagerActivity" />
    </application>

</manifest>